                ul.group__list 
                    li.item Zara
                    li.item Chanel
                    li.item gucci
                    li.item.item--active Calvin klein
                    li.item Hermes
                    li.item Diesel
            .group.by-size 
                h4.group__title By Size
                ul.group__list 
                    li.item xXXS
                    li.item xXS
                    li.item xS
                    li.item s
                    li.item.item--active l
                    li.item xl
