doctype
html(lang='en')

    head
        //- Pages head tags (meta, fonts, icons, scripts, and custom styles)
        include includes/head.pug

        //- Helper functions for product
        script(src="./scripts/js/helper/product.js", defer)

        title Shopping Cart

    body.shopping-cart
        include includes/navbar-v1.pug
        +navbar-v1-active(true)
        header.page-header 
            .page-header__tags 
                span.tag: a(href="#") home
                span.tag: a(href="#") cart
            h5.page-header__title Your Shopping cart
        main.wrapper
            .cart-items
                .items 
                    ul.items__bar
                        li Product
                        li Price
                        li Quantity
                        li Total
                    ul.items__item
                        li.product
                            span.action.action-secondary.white: i.fa-solid.fa-xmark
                            .img-container.img
                                img(src="", alt="")
                            .name Technical suit
                        li.price $290.00
                        li.quantity: input(type="number", value="1").input
                        li.total $290.00
                .buttons 
                    a(href="#").btn.btn-secondary.black Continue Shopping
                    a(href="#").btn.btn-secondary.black Update Cart
            .payment-data 
                .total 
                    .total__subtotal
                        span SubTotal: 
                        span $600.00 
                    .total__shipping
                        span Shipping: 
                        span free
                    .total__grand-total
                        span Grand Total:
                        span $600.00
                    span.total__seprator
                    span.btn.btn-primary.black Proceed to checkout
                form.shipping 
                    h6.shipping__title Estimate shipping and tax
                    .shipping__sub-title Enter your destination to get shipping & tax
                    select.select
                        option(value="default") Country * 
                        option(value="egypt") Egypt
                        option(value="usa") USA 
                    input(type="text", placeholder="State/Province").input
                    input(type="text", placeholder="Zip / Postal code").input
                    button.btn.btn-secondary.black(type='submit') Get a quote
                form.code
                    h6.code__title Discount Codes
                    input(type="text", placeholder="Enter your coupin if you have one").input
                    button.btn.btn-secondary.black(type='submit') Apply coupon
    include includes/footer.pug