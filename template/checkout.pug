doctype
html(lang='en')

    head
        //- Pages head tags (meta, fonts, icons, scripts, and custom styles)
        include includes/head.pug

        title Checkout

    body.checkout
        include includes/navbar-v1.pug
        +navbar-v1-active(true)
        header.page-header 
            .page-header__tags 
                span.tag: a(href="#") home
                span.tag: a(href="#") cart
            h5.page-header__title Checkout
        form.wrapper
            .address 
                .address__title Ship to a Defferent Address? 
                .address__join
                    label
                        input(type="checkbox")
                        | Create an account?
                    .refund - Returning customer? #[a(href="#") Click here to login]
                select.input
                    option(value="default") Country * 
                    option(value="egypt") Egypt
                    option(value="usa") USA
                .address__group
                    input(type="text", placeholder="Frist Name *").input
                    input(type="text", placeholder="Last Name").input
                input(type="text", placeholder="Company Name").input
                .address__group
                    input(type="text", placeholder="Street Address *").input
                    input(type="text", placeholder="Apartment, suite, unite ect (optinal)").input
                input(type="text", placeholder="Town/City *").input
                input(type="text", placeholder="Contry/States").input
                input(type="text", placeholder="Post code/Zip *").input
                .address__group
                    input(type="email", placeholder="Email Address *").input
                    input(type="text", placeholder="Phone Number").input
                textarea(placeholder="Order Note", rows="5").input
            .order 
                .order__title Your Order
                .order__products
                    ul.bar 
                        li product
                        li price
                    ul.items 
                        li.item 
                            .item__name Technical suit	 x 1
                            .item__price $290.00
                        li.item 
                            .item__name Navy Blue suit	 x 1
                            .item__price $310.00
                .order__total 
                    .subtotal
                        span SubTotal: 
                        span $600.00 
                    .shipping
                        span Shipping: 
                        span free
                    .grand-total
                        span Grand Total:
                        span $600.00
                .order__payment 
                    label
                        .main
                            input(type="radio", name="payment", checked)
                            | Direct bank transfer
                        .sub Interdum et malesuada fames a ipsum primis in faucibus. Pellentesque ut nisi erat.Vestibulum a velit in ipsum hendrerit mollis
                    label
                        .main
                            input(type="radio", name="payment")
                            | Cheque Payment
                    label
                        .main
                            input(type="radio", name="payment")
                            | PayPal
                button(type="submit").btn.btn-primary.black Place order
    include includes/footer.pug